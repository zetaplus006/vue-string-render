{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strict": false,
    "strictPropertyInitialization": false,
    "strictFunctionTypes": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve"
  },
  "exclude": [
    "./node_modules"
  ],
  "compileOnSave": false
}